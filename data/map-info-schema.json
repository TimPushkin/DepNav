{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "mapName": {
      "type": "string"
    },
    "version": {
      "type": "integer"
    },
    "floorWidth": {
      "type": "integer"
    },
    "floorHeight": {
      "type": "integer"
    },
    "tileSize": {
      "type": "integer"
    },
    "zoomLevelsNum": {
      "type": "integer"
    },
    "floors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "floor": {
            "type": "integer"
          },
          "markers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "ENTRANCE",
                    "ROOM",
                    "STAIRS_UP",
                    "STAIRS_DOWN",
                    "STAIRS_BOTH",
                    "ELEVATOR",
                    "WC_MAN",
                    "WC_WOMAN",
                    "WC",
                    "OTHER"
                  ]
                },
                "is_closed": {
                  "type": "boolean"
                },
                "x": {
                  "type": "integer"
                },
                "y": {
                  "type": "integer"
                },
                "ru": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "description": {
                      "type": [
                        "string",
                        "null"
                      ]
                    }
                  },
                  "required": [
                    "title",
                    "description"
                  ]
                },
                "en": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "description": {
                      "type": [
                        "string",
                        "null"
                      ]
                    }
                  },
                  "required": [
                    "title",
                    "description"
                  ]
                }
              },
              "required": [
                "type",
                "is_closed",
                "x",
                "y",
                "ru",
                "en"
              ]
            }
          }
        },
        "required": [
          "floor",
          "markers"
        ]
      }
    }
  },
  "required": [
    "mapName",
    "version",
    "floorWidth",
    "floorHeight",
    "tileSize",
    "zoomLevelsNum",
    "floors"
  ]
}
